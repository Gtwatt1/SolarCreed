<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#fff200" />
            <gradient android:angle="-90" android:startColor="#fff200" android:endColor="#cca51a"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#d2cc1a" />
            <solid android:color="#d2cc1a"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="1dip" android:color="#a3a30c" />
            <gradient android:angle="-90" android:startColor="#d2cc1a" android:endColor="#cca51a" />
        </shape>
    </item>
</selector>