<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="3dp"
        android:id="@+id/home_card_view"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chicken"
            android:textColor="#ffffff"
            android:id="@+id/home_card_type"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/home_card_pic"
            android:tint="#ffffff"
            android:layout_below="@+id/home_card_type"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2302"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:layout_below="@+id/home_card_pic"
            android:id="@+id/home_card_count"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/home_card_count"
            android:id="@+id/home_card_add"
            android:background="@color/colorAccent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"/>
    </RelativeLayout>

</LinearLayout>
