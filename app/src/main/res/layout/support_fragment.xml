<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#efefef">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="36%"
        app:layout_widthPercent="100%"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/map" />



    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="64%"
        android:layout_below="@id/map"
        android:layout_marginTop="10dp"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/map"
        android:layout_margin="12dp"
        android:background="#ffffff"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Solar Solutions ng\n Abuja \n Nigeria"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\n\nPhone"
            android:textStyle="bold"

            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="080939494882"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\nEmail"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email#hdjdk.com"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\nwebsite"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="naira.com"
            android:layout_marginLeft="10dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email us"
            android:elevation="2dp"
            android:textAllCaps="false"
            android:background="#ffffff"
            android:paddingLeft="4dp"
            android:layout_margin="10dp"
            android:textSize="13sp"
            android:id="@+id/mail_us"
            android:drawableRight="@drawable/ic_media_pause_light"
            android:textStyle="normal"
            android:textAlignment="viewStart"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:text="Call us"
            android:background="#ffffff"
            android:layout_margin="10dp"
            android:textSize="13sp"
            android:textAllCaps="false"
            android:drawableRight="@drawable/ic_media_play_light"
            android:elevation="2dp"
            android:id="@+id/call_us"
            android:textAlignment="viewStart"/>

    </LinearLayout>

    </ScrollView>




</android.support.percent.PercentRelativeLayout>