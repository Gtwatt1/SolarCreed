<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gtwatt.solarcreed.AlmostThereActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Almost There!"
            android:textSize="40sp"
            android:layout_above="@id/letsstock"
            android:layout_centerHorizontal="true"
            android:id="@+id/almost_there"
            android:textColor="#ffffff"
            />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/letsstock"
            android:layout_height="wrap_content"
            android:text="Now Let's Stock Your Poultry"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:textColor="#ffffff"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            android:text="Start Stocking"
            android:background="@color/colorAccent"
            android:textColor="#ffffff"
            />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
